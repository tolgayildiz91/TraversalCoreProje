@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>CQRS Tur Rotası Verileri</h2>

<br />

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Şehir</td>
        <td>Gün-Gece</td>
        <td>Fiyat</td>
        <td>Kapasite</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.city</td>
            <td>@item.daynight</td>
            <td>@item.price TL</td>
            <td>@item.capacity</td>
            <td>@item.id</td>
            <td><a href="/Admin/DestinationCQRS/DeleteDestination/@item.id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/DestinationCQRS/GetDestination/@item.id" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }

</table>

<a href="/Admin/DestinationCQRS/AddDestination/" class="btn btn-outline-primary">Yeni Tur Rotası Girişi </a>